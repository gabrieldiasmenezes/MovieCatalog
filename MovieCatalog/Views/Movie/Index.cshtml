@model List<MovieCatalog.Models.Movie>

@{
    ViewData["Title"] = "Catálogo de Filmes";
}

<!-- Barra de pesquisa -->
<form method="get" class="d-flex justify-content-center mb-4">
    <div class="input-group w-50">
        <input type="text" name="search" class="form-control" placeholder="Pesquisar Filme" value="@ViewData["Search"]">
        <button type="submit" class="btn btn-danger">Pesquisar</button>
    </div>
</form>

<a asp-action="Add" class="btn btn-danger mb-4 d-block mx-auto" style="width: 200px;">Adicionar Novo Filme</a>

<!-- Carrossel de Filmes -->
<div class="container">
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var movie in Model)
        {
            <div class="col">
                <!-- Card clicável -->
                <a href="@Url.Action("Details", "Movie", new { id = movie.Id })" class="card h-100 border-0 text-decoration-none text-light">
                    <img src="@movie.ImageUrl" class="card-img-top" alt="@movie.Name">
                    <div class="card-body">
                        <h5 class="card-title">@movie.Name</h5>
                        <p class="card-text"><strong>Gênero:</strong> @movie.Genre</p>
                        <p class="card-text"><strong>Ano:</strong> @movie.ReleaseYear</p>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<!-- CSS diretamente na página -->
<style>
    /* Configuração do fundo preto para a página inteira */
    body {
        background-color: black;
        color: white;
    }

    /* Adicionando uma borda e sombra para os cards */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background-color: #333; /* Fundo escuro para os cards */
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.4);
        }

        /* Tornando o card clicável com link e mantendo o estilo */
        .card a {
            color: inherit; /* Evitar que o link tenha cor diferente do texto */
        }

    /* Estilizando o botão de pesquisa */
    .input-group input {
        border-radius: 25px;
    }

    .input-group button {
        border-radius: 25px;
    }

    /* Ajuste no botão Adicionar Novo Filme */
    .btn-danger {
        border-radius: 25px;
        padding: 10px;
    }

    .card-img-top {
        width: 100%; 
        height: 200px; 
        object-fit: cover; 
    }
</style>
