@model MovieCatalog.Models.Movie

@{
    ViewData["Title"] = "Detalhes do Filme";
}

<div class="container">
    <h2 class="text-center text-light">@Model.Name</h2>

    <!-- Detalhes do Filme -->
    <div class="movie-details text-light">
        <div class="row">
            <!-- Imagem do Filme -->
            <div class="col-md-4">
                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" style="object-fit: cover; width: 100%; height: auto;">
            </div>

            <!-- Informações do Filme -->
            <div class="col-md-8">
                <div class="movie-info">
                    <p><strong>Diretor:</strong> @Model.Director</p>
                    <p><strong>Gênero:</strong> @Model.Genre</p>
                    <p><strong>Ano de Lançamento:</strong> @Model.ReleaseYear</p>
                    <p><strong>Descrição:</strong></p>
                    <p>@Model.Description</p>
                </div>

                <!-- Botões de Excluir e Editar -->
                <div class="movie-actions mt-4 d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning rounded-pill px-4">Editar</a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Tem certeza de que deseja excluir este filme?');">
                        <button type="submit" class="btn btn-danger rounded-pill px-4">Excluir</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Botão de Voltar -->
        <div class="mt-4">
            <a asp-action="Index" class="btn btn-secondary">Voltar ao Catálogo</a>
        </div>
    </div>
</div>

<!-- CSS diretamente na página -->
<style>
    /* Configuração do fundo preto para a página inteira */
    body {
        background-color: black;
        color: white;
    }

    .container {
        margin-top: 20px;
    }

    h2 {
        color: #fff;
        margin-bottom: 30px;
    }

    .movie-info {
        margin-top: 20px;
    }

    .movie-actions .btn {
        font-size: 16px;
        padding: 10px 20px;
        border-radius: 25px;
    }

    .movie-actions .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .movie-actions .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .movie-actions .btn:hover {
        opacity: 0.8;
    }

    .btn-secondary {
        border-radius: 25px;
        padding: 10px 20px;
        font-size: 16px;
    }
</style>
